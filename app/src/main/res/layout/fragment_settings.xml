    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/interval"
            android:textColor="@android:color/white"
            android:textSize="27sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_time_imterval"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/rd_five_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:buttonTint="@android:color/white"
                android:text="05 sec"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd_thirty_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/white"
                android:text="30 sec"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd_two_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:buttonTint="@android:color/white"
                android:text="02 min"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd_five_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:buttonTint="@android:color/white"
                android:text="05 min"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd_fifteen_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:buttonTint="@android:color/white"
                android:text="15 min"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd_thirty_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="7dp"
                android:buttonTint="@android:color/white"
                android:text="30 min"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textVie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/train_no"
            android:textColor="@android:color/white"
            android:textSize="27sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_train_no"
            android:layout_width="146dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/rd_train_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/white"
                android:text="12872"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd_train_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:buttonTint="@android:color/white"
                android:text="53647"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd_train_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:buttonTint="@android:color/white"
                android:text="65759"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd_train_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:buttonTint="@android:color/white"
                android:text="65812"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd_train_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:buttonTint="@android:color/white"
                android:text="98564"
                android:textSize="23sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rd_train_six"
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="7dp"
                android:buttonTint="@android:color/white"
                android:text="58647"
                android:textSize="23sp"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_train_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Train Name"
        android:textSize="50sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
